N=int(input())
a=(N)//2+1
b=N//2
i=1
while i<=a:
    spaces=1
    while spaces <=i - 1:
        print(' ', end = '')
        spaces=spaces+1
    j=1    
    while j <=i:
        print('* ', end = '')
        j=j+1
    print()
    i=i+1
i=a-1
while i>=1:
    spaces=1
    while spaces<=b+(i)-a:
        print(' ', end = '')
        spaces=spaces+1
    j=1    
    while j<=b+i-a+1:
        print('* ', end='')
        j=j+1
    print()
    i=i-1
